<div class="row">
    <div class="col-9 mb-3">
        <h2>Details of Appointments</h2>
    </div>
    <div class="col-3">
        <a href="/Appointment/Create/" type="button" class="btn btn-danger"><i class="bi bi-plus-circle"></i> Create New Appointment</a>
    </div>
</div>

<div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Patient Name</th>
                <th scope="col">Appointment Time</th>
                <th scope="col">Appointment Date</th>
            </tr>
        </thead>
        <tbody>
  
                @foreach (var item in Model)
                {
                <tr class="table-light",>
                    <td>@item.PatientName</td>
                    <td>@item.AppointmentDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.AppointmentTime.ToString("hh\\:mm")</td>
                </tr>
                }
            

        </tbody>
    </table>
</div>